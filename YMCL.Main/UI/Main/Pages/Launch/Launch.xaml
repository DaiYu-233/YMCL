<Page x:Class="YMCL.Main.UI.Main.Pages.Launch.Launch" x:Name="PageRoot"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:YMCL.Main.UI.Main.Pages.Launch"
      mc:Ignorable="d" >

    <Grid>
        <Grid VerticalAlignment="Bottom">
            <Border Background="{DynamicResource 1x}" Margin="10,0,190,10" CornerRadius="5"></Border>
            <ui:SplitButton Width="170" Height="55" Margin="0,0,10,10" HorizontalAlignment="Right">
                <ui:SplitButton.Flyout>
                    <ui:MenuFlyout>
                        <MenuItem Header="By rating" Tag="rating"/>
                        <MenuItem Header="By match" Tag="match"/>
                        <MenuItem Header="By distance" Tag="distance"/>
                    </ui:MenuFlyout>
                </ui:SplitButton.Flyout>
            </ui:SplitButton>
        </Grid>
    </Grid>
</Page>
