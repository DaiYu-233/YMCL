<pu:WindowX
    x:Class="YMCL.Main.Views.MusicPlayer.DesktopLyric.DesktopLyric"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:properties="clr-namespace:YMCL.Main.Public.Lang"
    xmlns:pu="https://opensource.panuon.com/wpf-ui"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    Title="DesktopLyric"
    HorizontalAlignment="Left"
    VerticalAlignment="Top"
    pu:WindowXCaption.Height="0"
    AllowsTransparency="True"
    Background="{x:Null}"
    Foreground="Red"
    Loaded="WindowX_Loaded"
    ResizeMode="NoResize"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>
        <TextBlock
            x:Name="Lyric"
            FontFamily="{DynamicResource Font}"
            FontSize="14"
            MouseLeftButtonDown="Lyric_MouseLeftButtonDown"
            Text="Lyric" />
    </Grid>
</pu:WindowX>
