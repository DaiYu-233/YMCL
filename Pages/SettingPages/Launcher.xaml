<Page x:Class="YMCL.Pages.SettingPages.Launcher"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:ui="http://schemas.modernwpf.com/2019" 
      xmlns:local="clr-namespace:YMCL.Pages.SettingPages"  xmlns:pu="https://opensource.panuon.com/wpf-ui"
      mc:Ignorable="d" xmlns:hc="https://handyorg.github.io/handycontrol"

      Title="Launcher">
    <Page.Resources>
        <DataTemplate x:Key="ColorPickerTemplate1">
            <Border Background="{Binding}" BorderBrush="{Binding BorderBrush, Mode=OneWay, RelativeSource={RelativeSource AncestorType={x:Type pu:ColorPicker}}}" BorderThickness="1" Margin="5" Width="{Binding ActualHeight, Mode=OneWay, RelativeSource={RelativeSource Mode=Self}}"/>
        </DataTemplate>
    </Page.Resources>

    <Border Background="{DynamicResource ThemeBackground}" CornerRadius="0,0,8,0">
        <Grid>
            <Button x:Name="SaveSettingBtn" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-35,5,0" Height="30" Width="130" FontFamily="MiSans Medium" Content="应用更改" Click="SaveSettingBtn_Click"/>

            <ScrollViewer VerticalScrollBarVisibility="Auto" >
                <Grid Height="348" VerticalAlignment="Top">
                    <Border Margin="10,10,10,0" VerticalAlignment="Top" Background="{DynamicResource ThemeContentBorderBackground}" CornerRadius="3,3,3,3" Height="130">
                        <Grid>
                            <TextBlock FontFamily="MiSans Medium" Text="个性化" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="9,7,0,0" FontSize="13" Foreground="{DynamicResource ThemeTextColor}"/>
                            <Grid Margin="0,28,0,0">
                                <Grid Height="30" VerticalAlignment="Top" Margin="10,0,10,0">
                                    <TextBlock FontFamily="MiSans Medium" Text="显示信息" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="8,0,0,0" FontSize="14" Foreground="{DynamicResource ThemeTextColor}"/>
                                    <ui:ToggleSwitch x:Name="displayinf" Width="82" Height="28" IsOn="True" FontSize="14" FontFamily="MiSans Medium" Margin="0,-4,0,0" HorizontalAlignment="Right"/>
                                </Grid>
                                <Grid Height="30" Margin="10,30,10,0" VerticalAlignment="Top">
                                    <TextBlock FontFamily="MiSans Medium" Text="深色主题" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="8,0,0,0" FontSize="14" Foreground="{DynamicResource ThemeTextColor}"/>
                                    <ui:ToggleSwitch x:Name="DarkThemeSwitch" Width="82" Height="28" IsOn="False" FontSize="14" FontFamily="MiSans Medium" Margin="0,-4,0,0" HorizontalAlignment="Right"/>
                                </Grid>
                                <Grid Height="30" Margin="10,60,10,0" VerticalAlignment="Top">
                                    <TextBlock FontFamily="MiSans Medium" Text="主题色" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="8,0,0,0" FontSize="14" Foreground="{DynamicResource ThemeTextColor}"/>
                                    <pu:ColorPicker  x:Name="ColorPicker" VerticalAlignment="Center"  ColorEditors="HEX" SelectedColor="#0078D7" FontFamily="MiSans Medium" Height="24" HorizontalAlignment="Right" Margin="0,0,4,0" Background="{DynamicResource ThemeBackground}" Foreground="{DynamicResource ThemeTextColor}"/>
                                </Grid>
                            </Grid>

                        </Grid>
                    </Border>
                    <Border Margin="10,150,10,0" VerticalAlignment="Top" Background="{DynamicResource ThemeContentBorderBackground}" CornerRadius="3,3,3,3" Height="40">
                        <Grid>
                            <TextBlock FontFamily="MiSans Medium" Text="外部启动" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="14,0,0,0" FontSize="14" Foreground="{DynamicResource ThemeTextColor}"/>
                            <Button HorizontalAlignment="Right" Height="30" Width="127" Margin="0,0,5,0" FontFamily="MiSans Medium" Content="写入注册表" IsCancel="True" FontSize="13" Click="Button_Click"/>
                        </Grid>
                    </Border>

                </Grid>
            </ScrollViewer>
        </Grid>
    </Border>
</Page>
