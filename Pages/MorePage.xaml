<Page x:Class="YMCL.Pages.MorePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:YMCL.Pages"
      mc:Ignorable="d" xmlns:ui="http://schemas.modernwpf.com/2019" 
      d:DesignHeight="490" d:DesignWidth="840"
      Title="SettingPage">
    <Border Background="{DynamicResource ThemeBackground}" CornerRadius="0,0,8,0">
        <Grid  >
            <Border VerticalAlignment="Top" Height="40" Background="{DynamicResource ThemeNavigationBackground}">
                <ui:NavigationView IsSettingsVisible="False" PaneDisplayMode="Top" IsBackButtonVisible="Collapsed" FontFamily="MiSans Medium" Margin="8,0,8,0" SelectionChanged="NavigationView_SelectionChanged"  >
                    <ui:NavigationView.MenuItems>
                        <ui:NavigationViewItem  FontFamily="MiSans Medium" IsSelected="True" Icon="Link" Content="关于" x:Name="about"/>


                    </ui:NavigationView.MenuItems>
                </ui:NavigationView>
            </Border>
            <Frame x:Name="MainFrame" Content="" Margin="0,40,0,0" NavigationUIVisibility="Hidden"/>
        </Grid>
    </Border>
</Page>