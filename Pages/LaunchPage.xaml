<Page x:Class="YMCL.Pages.LaunchPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:YMCL.Pages"
      mc:Ignorable="d" xmlns:ui="http://schemas.modernwpf.com/2019" 
      d:DesignHeight="490" d:DesignWidth="840"
      Title="LaunchPage" MouseEnter="Page_MouseEnter">
    <Border Background="White" CornerRadius="0,0,8,0">
        <Grid  >

            <Border HorizontalAlignment="Center" Height="45" Margin="0,435,0,0" VerticalAlignment="Top" Width="820" Background="#FFEDEDED" CornerRadius="3,3,3,3">
                <Grid>
                    <Button x:Name="LaunchGame" Content="启动" Width="136" FontFamily="MiSans Medium" VerticalAlignment="Stretch" Margin="0,5,5,5" HorizontalAlignment="Right" />
                    <Button Content="版本列表" Width="104" FontFamily="MiSans Medium" VerticalAlignment="Stretch" Margin="543,5,0,5" Click="Button_Click" />
                    <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Width="84" Margin="6,4,0,0" Text="当前启动核心" FontFamily="MiSans Medium"/>
                    <TextBlock x:Name="GameVerTextBlock" HorizontalAlignment="Left" VerticalAlignment="Top" Width="241" Margin="7,18,0,0" Text="None" FontFamily="MiSans Medium" Height="22" FontSize="18" Foreground="#FF00D6FF" MouseDown="GameVerTextBlock_MouseDown"/>
                </Grid>
            </Border>
            <Border x:Name="VerListBorder" Background="#FFEDEDED" CornerRadius="3,3,3,3" Margin="10,10,10,10" Visibility="Hidden">
                <Grid>
                    <Grid VerticalAlignment="Top" Height="30">
                        <Button x:Name="btnClose" Style="{StaticResource IconButtonsStyle}" Content="{DynamicResource close}" Tag="IsCloseButton" HorizontalAlignment="Right" Click="btnClose_Click" VerticalAlignment="Center" Margin="0,0,3,0"/>
                        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Width="64" Height="14" FontFamily="MiSans Medium" Text="版本列表" Margin="11,0,0,0"/>
                    </Grid>
                    <ListView x:Name="VerListView" d:ItemsSource="{d:SampleData ItemCount=5}" FontFamily="MiSans Medium" SelectedValuePath="Id" DisplayMemberPath="Id" Margin="0,30,0,0" SelectionChanged="VerListView_SelectionChanged" />
                </Grid>
            </Border>
            <Border Height="26" Margin="0,10,10,0" VerticalAlignment="Top" Width="307" Background="White" CornerRadius="3,3,3,3" HorizontalAlignment="Right" BorderThickness="2,2,2,2" BorderBrush="#FFEDEDED">
                <Grid>
                    <TextBlock x:Name="LoginTypeText" HorizontalAlignment="Left" VerticalAlignment="Center" Width="94" FontFamily="MiSans Medium" Margin="2,0,0,0" FontSize="14"/>
                    <TextBlock x:Name="LoginNameText" HorizontalAlignment="Left" VerticalAlignment="Center" Width="203" FontFamily="MiSans Medium" Margin="98,0,0,0" FontSize="14" TextAlignment="Center" Foreground="#FF00D6FF"/>

                </Grid>
            </Border>
            <Border Height="26" Margin="0,10,322,0" VerticalAlignment="Top" Width="508" Background="White" CornerRadius="3,3,3,3" HorizontalAlignment="Right" BorderThickness="2,2,2,2" BorderBrush="#FFEDEDED">
                <Grid>
                    <TextBlock x:Name="JavaText" HorizontalAlignment="Center" VerticalAlignment="Center" Width="500" FontFamily="MiSans Medium" FontSize="14" TextAlignment="Center" Foreground="Black"/>

                </Grid>
            </Border>
        </Grid>
    </Border>
</Page>
