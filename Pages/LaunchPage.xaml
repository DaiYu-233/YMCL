<Page x:Class="YMCL.Pages.LaunchPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:YMCL.Pages"
      mc:Ignorable="d" xmlns:ui="http://schemas.modernwpf.com/2019" 
      d:DesignHeight="470" d:DesignWidth="840"
      Title="LaunchPage">
    <Border Background="{DynamicResource ThemeBackground}" CornerRadius="0,0,8,0">
        <Grid  >

            <TextBlock x:Name="hitokoto" VerticalAlignment="Top" Margin="10,5,10,0" Text="" FontSize="13" Foreground="{DynamicResource ThemeTextColor}" TextAlignment="Center" MouseLeftButtonUp="hitokoto_MouseLeftButtonUp" MouseRightButtonUp="hitokoto_MouseRightButtonUp" FontFamily="MiSans Medium" />
            <Border Height="45" VerticalAlignment="Bottom" Background="{DynamicResource ThemeContentBorderBackground}" CornerRadius="3,3,3,3" Margin="10,0,188,10" Visibility="Hidden">
                <Grid>

                    <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Width="84" Margin="6,4,0,0" Text="当前启动核心" FontFamily="MiSans Medium" Foreground="{DynamicResource ThemeTextColor}"/>
                    <TextBlock x:Name="GameVerTextBlock" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="7,18,0,0" Text="None" FontFamily="MiSans Medium" Height="26" FontSize="18" Foreground="#FF00D6FF" MouseDown="GameVerTextBlock_MouseDown"/>
                </Grid>
            </Border>
            <ui:SplitButton x:Name="LaunchGame" Height="45" Width="205" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,30,30" Click="LaunchGame_Click" BorderThickness="1,1,1,1">
                <ui:SplitButton.Flyout>
                    <ui:MenuFlyout Placement="Bottom">
                        <MenuItem Header=" 版本列表" FontFamily="MiSans Medium" Click="MenuItem_Click"/>
                        <MenuItem Header=" 版本设置" FontFamily="MiSans Medium"/>

                    </ui:MenuFlyout>
                </ui:SplitButton.Flyout>
                <Grid>
                    <TextBlock Text="启动游戏" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-12,0,0" FontSize="14" FontFamily="MiSans Medium"/>
                    <TextBlock x:Name="GameCoreText" Text="&lt;游戏核心&gt;" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,17.5,0,0" FontSize="11" FontFamily="MiSans Medium"/>
                </Grid>
            </ui:SplitButton>
            <Border x:Name="VerListBorder" Background="{DynamicResource ThemeContentBorderBackground}" CornerRadius="3,3,3,3" Margin="10,10,10,10" Visibility="Hidden">
                <Grid>
                    <Grid VerticalAlignment="Top" Height="30">
                        <Button x:Name="btnClose" Style="{StaticResource IconButtonsStyle}" Content="{DynamicResource close}" Tag="IsCloseButton" HorizontalAlignment="Right" Click="btnClose_Click" VerticalAlignment="Center" Margin="0,0,3,0"/>
                        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Width="64" Height="14" FontFamily="MiSans Medium" Text="版本列表" Margin="11,0,0,0" Foreground="{DynamicResource ThemeTextColor}"/>
                    </Grid>
                    <ListView DisplayMemberPath="Id" SelectedValuePath="Id" x:Name="VerListView" d:ItemsSource="{d:SampleData ItemCount=5}" FontFamily="MiSans Medium" Margin="0,30,0,0" SelectionChanged="VerListView_SelectionChanged" />
                </Grid>
            </Border>
        </Grid>
    </Border>
</Page>
