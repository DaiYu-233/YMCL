                                <Grid>
                                    <TextBox x:Name="MaxMemTextBox" Width="130" Height="30" Margin="619,41,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Text="1024" FontSize="16" FontFamily="Noto Sans CJK SC Medium" IsReadOnly="True" TextAlignment="Center" />
                                    <TextBlock  x:Name="GameMemUse" HorizontalAlignment="Right" VerticalAlignment="Top" Text="Null" FontFamily="Noto Sans Mono CJK SC" FontSize="16" Width="52" Height="20" Margin="0,13,10,0" Foreground="{DynamicResource TextPrimaryColor}" Visibility="Hidden" />

                                    <TextBlock Foreground="{DynamicResource TextPrimaryColor}" HorizontalAlignment="Left" VerticalAlignment="Top" Text="游戏内存" FontFamily="Noto Sans Mono CJK SC Medium" FontSize="22" Width="172" Height="40" Margin="6,0,0,0" />
                                    <TextBlock  Foreground="{DynamicResource TextPrimaryColor}" HorizontalAlignment="Left" VerticalAlignment="Top" Text="游戏运行时使用运行内存的最大值" FontFamily="Noto Sans Mono CJK SC Medium" FontSize="14" Margin="7,25,0,0" Width="266" Height="25" />

                                    <TextBox x:Name="MinMemTextBox" Width="130" Height="30" Margin="444,41,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Text="1024" FontSize="16" FontFamily="Noto Sans CJK SC Medium" IsReadOnly="True" TextAlignment="Center" />
                                    <TextBlock HorizontalAlignment="Left" Margin="477,14,0,0" TextWrapping="Wrap" Text="最小内存" VerticalAlignment="Top" FontSize="16"/>
                                    <TextBlock HorizontalAlignment="Left" Margin="652,14,0,0" TextWrapping="Wrap" Text="最大内存" VerticalAlignment="Top" FontSize="16"/>


                                </Grid>
                            </Border>
                            <Expander HorizontalAlignment="Left" Height="157" Header="内存信息" VerticalAlignment="Top" Width="406" Margin="21,159,0,0" FontSize="14" Background="{x:Null}" Foreground="Black">
                                <Border CornerRadius="8" BorderThickness="2" BorderBrush="#FFB9B9B9" Margin="0,13,0,0" Background="White">
                                    <Grid>

                                        <Border CornerRadius="8" BorderThickness="2,2,2,2" BorderBrush="#FFFFF609" Margin="10,10,167,0" Padding="5,5,5,5" HorizontalAlignment="Left" VerticalAlignment="Top" Width="125" Height="50">
                                            <Grid>
                                                <TextBlock Foreground="{DynamicResource TextPrimaryColor}" x:Name="Memory_Copy" VerticalAlignment="Top" Text="物理内存" FontFamily="Noto Sans Mono CJK SC Medium" FontSize="14" Height="23" TextAlignment="Center" />
                                                <TextBlock x:Name="Memory" VerticalAlignment="Top" Text="Null" FontFamily="Noto Sans Mono CJK SC Medium" FontSize="14" Height="20" TextAlignment="Center" Foreground="DeepSkyBlue" Margin="0,15,0,0" />
                                            </Grid>
                                        </Border>
                                        <Border CornerRadius="8" BorderThickness="2" BorderBrush="#FFFFF609" Margin="140,10,0,0" Padding="5,5,5,5" HorizontalAlignment="Left" VerticalAlignment="Top" Width="125" Height="50">
                                            <Grid>
                                                <TextBlock Foreground="{DynamicResource TextPrimaryColor}" VerticalAlignment="Top" Text="使用内存" FontFamily="Noto Sans Mono CJK SC Medium" FontSize="14" Height="23" TextAlignment="Center" />
                                                <TextBlock x:Name="MemoryRem" VerticalAlignment="Top" Text="Null" FontFamily="Noto Sans Mono CJK SC Medium" FontSize="14" Height="20" TextAlignment="Center" Foreground="DeepSkyBlue" Margin="0,15,0,0" />
                                            </Grid>
                                        </Border>
                                        <Border CornerRadius="8" BorderThickness="2" BorderBrush="#FFFFF609" Margin="270,10,0,0" Padding="5,5,5,5" HorizontalAlignment="Left" VerticalAlignment="Top" Width="125" Height="50">
                                            <Grid>
                                                <TextBlock Foreground="{DynamicResource TextPrimaryColor}" VerticalAlignment="Top" Text="可用内存" FontFamily="Noto Sans Mono CJK SC Medium" FontSize="14" Height="23" TextAlignment="Center" />
                                                <TextBlock x:Name="MemoryUse" VerticalAlignment="Top" Text="Null" FontFamily="Noto Sans Mono CJK SC Medium" FontSize="14" Height="20" TextAlignment="Center" Foreground="DeepSkyBlue" Margin="0,15,0,0" />
                                            </Grid>
                                        </Border>
                                        <Button x:Name="MemInfoRefresh" Content="刷新" HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top" Height="30" Width="75" FontSize="14" Click="MemInfoRefresh_Click"/>




                                    </Grid>
                                </Border>
                            </Expander>
                        </Grid>
                    </Border>
                </TabItem>
                <TabItem Foreground="{DynamicResource TextPrimaryColor}" x:Name="NetworkSettingTabitem" Header="个性化" FontFamily="Noto Sans Mono CJK SC Medium" FontSize="14" VerticalAlignment="Top" Height="35" Margin="20,0,-20,0" Width="125" IsSelected="True">
                    <Border CornerRadius="8,8,8,8" BorderThickness="3" BorderBrush="#FF989898" Background="{DynamicResource SecundaryGridColor}">
                        <Grid>
                            <Border VerticalAlignment="Top" BorderBrush="#FF949494" Height="85" CornerRadius="8,8,8,8" BorderThickness="2" Background="{DynamicResource SecundaryGridColor}" Margin="10,10,10,0" >
                                <Grid>
                                    <TextBlock Foreground="{DynamicResource TextPrimaryColor}" HorizontalAlignment="Left" VerticalAlignment="Top" Text="主题颜色" FontFamily="Noto Sans Mono CJK SC Medium" FontSize="22" Width="172" Height="40" Margin="6,0,0,0" />
