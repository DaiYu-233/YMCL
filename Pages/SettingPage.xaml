                        <Grid>
                            <Border VerticalAlignment="Top" BorderBrush="#FF949494" Height="85" CornerRadius="8,8,8,8" BorderThickness="2" Background="{DynamicResource SecundaryGridColor}" Margin="10,10,10,0" >
