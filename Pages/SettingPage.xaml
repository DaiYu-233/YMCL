                                    <TextBlock Foreground="{DynamicResource TextPrimaryColor}" HorizontalAlignment="Left" VerticalAlignment="Top" Text="Java路径" FontFamily="Noto Sans Mono CJK SC Medium" FontSize="22" Width="172" Height="40" Margin="6,0,0,0" />
